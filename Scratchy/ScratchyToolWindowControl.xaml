<UserControl x:Class="Scratchy.ScratchyToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="374.818" d:DesignWidth="331.084"
             Name="Scratchy">
    <!--<Grid>-->
    <UniformGrid>
        <TextBox TextWrapping="Wrap" Text="Type your scratchpad notes here and they will be saved automatically." AcceptsReturn="True" />
    </UniformGrid>
    <!--</Grid>-->
</UserControl>
